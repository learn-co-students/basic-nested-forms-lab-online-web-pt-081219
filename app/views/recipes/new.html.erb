<%= form_for @recipe do |f| %>
<%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name %>
    <%= ingr.text_field :name %>
    <br>
    <%= ingr.label :quantity %>
    <%= ingr.text_field :quantity %>
    <br>
    <%= ingr.label :ingredients_num %>
    <%= ingr.text_field :ingredients_num %>
    <br>

  <%end%>
  <%= f.submit %>
<% end %>
