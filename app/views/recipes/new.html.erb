<%# <%= render 'form', recipe: @recipe %> %>

<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.fields_for :ingredients do |spices| %>
        <%= spices.label :name %>
        <%= spices.text_field :name %>
        <%= spices.label :quantity %>
        <%= spices.text_field :quantity %>

<% end %>
    <%= f.submit %>
<% end %>
